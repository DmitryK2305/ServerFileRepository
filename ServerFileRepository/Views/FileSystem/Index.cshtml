@model ServerFileRepository.ViewModels.FileSystemViewModel

@{
    ViewData["Title"] = "ServerFileRepository";
}
@using (Html.BeginForm("AddDirectory", "FileSystem", FormMethod.Post))
{
    <input type="text" name="name" />
    <br>
    <input type="submit" value="Добавить папку" />
}
@using (Html.BeginForm("UploadFile", "FileSystem", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="file" name="file" />
    <br>
    <input type="submit" value="Загрузить" />
}
<div>
    <table>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                @if (item is File)
                {
                    <td>@Html.ActionLink("Скачать", "DownloadFile", new { name = item.Name })</td>
                    <td>@Html.ActionLink("Удалить", "DeleteFile", new { name = item.Name })</td>
                }
                @if (item is BackFolder)
                {
                    <td>@Html.ActionLink("Назад", "GoBack")</td>
                    <td></td>
                }
                @if (item is Directory)
                {
                    <td>@Html.ActionLink("Открыть", "OpenDirectory", new { name = item.Name })</td>
                    <td>@Html.ActionLink("Удалить", "DeleteDirectory", new { name = item.Name })</td>
                }
            </tr>
        }
    </table>
</div>
